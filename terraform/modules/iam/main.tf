        Action = [
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject",
          "s3:ListBucket"
        ]
        Resource = [
          "arn:aws:s3:::${var.project_name}-${var.environment}-documents/*",
          "arn:aws:s3:::${var.project_name}-${var.environment}-documents",
          "arn:aws:s3:::${var.project_name}-${var.environment}-ml-artifacts/*",
          "arn:aws:s3:::${var.project_name}-${var.environment}-ml-artifacts"
        ]
      }
    ]
  })

  tags = merge(var.common_tags, {
    Name = "${var.project_name}-${var.environment}-app-s3-access-policy"
    Type = "iam-policy"
  })
}

resource "aws_iam_role_policy_attachment" "app_s3_access" {
  policy_arn = aws_iam_policy.app_s3_access.arn
  role       = aws_iam_role.app_s3_access.name
} 